{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "RUN GAME (Full Debug)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "c:\\Users\\UserName\\Documents\\Godot\\Godot.exe",
            "args": [
                "--path",
                "${workspaceFolder}",
                "--verbose",
                "--profiling",
                // "--gpu-profile",
                // "--gpu-validation",
                "--debug-collisions",
                "--debug-paths",
                "--debug-navigation",
                "--debug-avoidance",
                // "--debug-stringnames",
                // "--debug-canvas-item-redraw",
                "--print-fps",
                "--max-fps",
                "60",
                "--time-scale",
                "1.0",
                "--disable-vsync",
                "--fixed-fps",
                "60",
                "--resolution",
                "960x540",
                "--windowed"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
